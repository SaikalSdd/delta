// RUN: %delta -print-ir %s | %FileCheck %s
// RUN: %delta -print-ir %s | %FileCheck %s -check-prefix=DEINIT
// RUN: %delta -print-ir %s | %FileCheck %s -check-prefix=CHECK-S
// RUN: %delta -print-ir %s | %FileCheck %s -check-prefix=CHECK-MAIN

struct S: Copyable {
    init() {}

    // CHECK-S: define void @S.foo({}* %this)
    // CHECK-S-NEXT: %this1 = load {}, {}* %this
    // CHECK-S-NEXT: call void @S.bar({} %this1)
    mutating func foo() {
        bar()
    }

    // CHECK-S: define void @S.bar({} %this)
    func bar() { }
}

struct T<U> {
    // CHECK: define void @"T<int>.init"({}* %this)
    // CHECK-NEXT: call void @"T<int>.baz"({}* %this)
    init() {
        baz()
    }

    // DEINIT: define void @"T<int>.deinit"({}* %this)
    // DEINIT-NEXT: call void @"T<int>.baz"({}* %this)
    deinit() {
        baz()
    }

    // CHECK: define void @"T<int>.baz"({}* %this)
    // CHECK-NEXT: call void @"T<int>.qux"({}* %this)
    mutating func baz() {
        qux()
    }

    // CHECK: define void @"T<int>.qux"({}* %this)
    func qux() { }
}

func main() {
    var s = S()
    s.foo()

    var t = T<int>()
    // CHECK-MAIN: call void @"T<int>.baz"({}* %t)
    t.baz()
}
