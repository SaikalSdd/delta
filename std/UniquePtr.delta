struct UniquePtr<Pointee> {
	var pointer: mutable Pointee*;

	init(value: Pointee) {
		this.pointer = allocate(value);
	}

	init(pointer: mutable Pointee*) {
		this.pointer = pointer;
	}

	deinit() {
		deallocate(pointer);
	}

	def get(): Pointee* {
		return pointer;
	}

	mutating def get(): mutable Pointee* {
		return pointer;
	}
}
